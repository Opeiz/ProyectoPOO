<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarreraRobot"
    >

    <TableLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/CarreraRobot"
        android:stretchColumns="0">

        <TableRow
            android:id="@+id/Fila1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView

                android:id="@+id/Equipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFD700	"
                android:padding="18dip"
                android:text="Equipo 1"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/Puntaje1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFD700	"
                android:padding="18dip"
                android:text="Puntaje 1"
                android:textColor="#000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView

                android:id="@+id/Equipo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C0C0C0	"
                android:padding="18dip"
                android:text="Equipo 2"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/Puntaje2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C0C0C0	"
                android:padding="18dip"
                android:text="Puntaje 2"
                android:textColor="#000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila3"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView

                android:id="@+id/Equipo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#b87333"
                android:padding="18dip"
                android:text="Equipo 3"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/Puntaje3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#b87333"
                android:padding="18dip"
                android:text="Puntaje 3"
                android:textColor="#000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila4"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView

                android:id="@+id/Equipo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#909090"
                android:padding="18dip"
                android:text="Equipo 4"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/Puntaje4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#909090"
                android:padding="18dip"
                android:text="Puntaje 4"
                android:textColor="#000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/Fila5"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView

                android:id="@+id/Equipo5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#909090"
                android:padding="18dip"
                android:text="Equipo 5"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/Puntaje5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#909090"
                android:padding="18dip"
                android:text="Puntaje 5"
                android:textColor="#000"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/CampeonateCarreraRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="Campeonato Carrera Robot" />

    <Button
        android:id="@+id/RefreshCarreraRobot"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:text="Actualizar"
        android:background="#3CB371"
        android:textColor="@android:color/black" />

</RelativeLayout>